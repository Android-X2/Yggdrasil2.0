<%- include('partials/header') -%>

<div class="hero min-h-screen bg-opacity-70" style="background-image: url('/./assets/images/mainTree.jpg');">
        <div class="hero-overlay bg-opacity-70 ">
                <div class="text-neutral-content flex ">
                        <div class="w-full flex flex-col items-center">
                                <h1 class="text-5xl font-sans py-5 underline underline-offset-2 " >Hello, <%= user.displayName %></h1>
                                <div class="mb-5 "> <img src="<%=image%>" alt="" class="rounded-lg"> </div>
                        </div>
                </div>
                <div class="text-neutral-content max-w-full min-h-scree ">
                        <div class="grid gird-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 lg:gap-8  max-w-full " >
                                <% for(let i=0;i<6;i++){ %> 
                                        <% if(branches[i]) {%>
                                        <div class="border-4 border-double rounded-lg row-span-3 h-96 relative flex flex-col justify-between">
                                                <div class="flex flex-col ">
                                                        <div class="text-2xl font-sans py-5 underline underline-offset-2 self-center ">
                                                                <div class="">
                                                                        <% if(branches[i].title.length>25) { %>
                                                                                <a href="/createLeaves/<%= branches[i]._id %>"><%= branches[i].title.slice(0,19)+'...' %> </a>
                                                                        <%}else {%>
                                                                                <a href="/createLeaves/<%= branches[i]._id %>"><%= branches[i].title %></a>
                                                                        <% } %>      
                                                                        
                                                                </div>
                                                        </div>
                                                        <% let leaves1 = leaves.filter(x=>x.branch.toString()==branches[i]._id.toString()) %>
                                                        <div>
                                                                <ul>
                                                                        <% for(let j=0; j<4; j++){ %>
                                                                            <% if(leaves1[j]) { %> 
                                                                            <div class="m-1" >
                                                                                    <li>
                                                                                        <a href="<%= leaves1[j].link %>" target="_blank" class="bg-primary-focus btn btn-primary btn-block btn-rounded"><%= leaves1[j].title %></a>
                                                                                    </li>  
                                                                            </div>  
                                                                            <% } %>
                                                                        <% } %>
                                                                </ul>
                                                        </div>
                                                         
                                                </div>
                                                <div class="flex justify-between">
                                                        <div class=" ">
                                                                <form
                                                                action="/branch/deleteBranch/<%= branches[i]._id%>?_method=DELETE"
                                                                method="POST"
                                                                class="">
                                                                <button class=" btn bg-accent fa fa-trash fa-2x" type="submit"></button>
                                                                </form>   
                                                        </div>
                                                        <div class="">
                                                                <% if(leaves1.length>4) {%>
                                                                        <a href="/createLeaves/<%= branches[i]._id %>">
                                                                                <button class=" btn-md btn   ">
                                                                                        All Leaves..
                                                                                </button>
                                                                        </a>
                                                                <% } %>        
                                                        </div>
                                                        <div class="">
                                                               <a href="/createLeaves/<%= branches[i]._id %>">
                                                                <button class=" btn-md btn bg-secondary  ">
                                                                        <i class="fa-solid fa-plus fa-2x"></i>
                                                                </button>
                                                               </a>
                                                        </div>
                                                </div>
   
                                        </div>
                                        <% } %>
                                <%} %>
                        </div>
                        <% if(branches.length>6) {%>
                        <div class='flex justify-center mt-2 w-full'>
                                <button class=' btn btn-primary '>
                                        <a href="/allBranches">All Branches </a>
                                </button>
                        </div>
                        <% } %>
                        <div class='fixed bottom-0 w-full'>
                                <button class='absolute bottom-10 right-10 btn btn-primary '>
                                        <a href="/createBranch">Add a Branch</a>
                                </button>
                        </div>
                            
                </div>
      </div>

      
     
 </div>
<%- include('partials/footer') -%>
<%- include('partials/header') -%>

<div class="hero min-h-screen bg-opacity-70" style="background-image: url('/./assets/images/mainTree.jpg');">
        <div class="hero-overlay bg-opacity-70 ">
            <div class="flex flex-col items-center  text-neutral-content">
            </div> 
            <div>
                <div class="text-neutral-content">
                    <h1 class="text-5xl font-sans py-5 underline underline-offset-2">Current Leaves in <%= branches.title %></h1>
                </div>
            </div>
            
            <div class="">
                <div class="grid grid-flow-row grid-cols-6 gap-8  max-w-full text-neutral-content " >
                    <% for(let i=0;i<leaves.length;i++){ %> 
                        <% if(branches._id.toString()=== leaves[i].branch.toString()) { %>
                            <div class="border-2 border-double rounded-lg flex flex-row justify-around">
                                    <div class="">
                                            <div class="text-2xl font-sans py-5 underline underline-offset-2">
                                                <% if(leaves[i].title.length>13) { %>
                                                    <%= leaves[i].title.slice(0,11)+'...' %>
                                                <%}else {%>
                                                <%= leaves[i].title %>
                                                <% } %>
                                            </div>
                                    </div>
                                    <div class=" self-center">
                                        <form
                                        action="/leaves/deleteLeaves/<%= leaves[i]._id%>?_method=DELETE"
                                        method="POST"
                                        class="">
                                        <button class=" btn btn-primary fa fa-trash" type="submit"></button>
                                        </form>       
                                    </div>  
                            </div>
                        <% } %>
                    <%} %>
            </div>
            </div>
      </div> 
 </div>
<%- include('partials/footer') -%>
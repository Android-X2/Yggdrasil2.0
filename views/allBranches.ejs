<%- include('partials/header') -%>

<div class="hero min-h-screen bg-opacity-70" style="background-image: url('/./assets/images/mainTree.jpg');">
        <div class="hero-overlay bg-opacity-70 ">
           
            <div>
                <div class="text-neutral-content">
                    <h1 class="text-5xl font-sans py-5 underline underline-offset-2">Current Branches</h1>
                </div>
            </div>
            
            <div class="">
                <div class="grid gird-cols-1 md:grid-cols-3 lg:grid-cols-6 gap-4 lg:gap-8 max-w-full text-neutral-content" >
                    <% for(let i=0;i<branches.length;i++){ %> 
                        <div class="border-2 border-double rounded-lg flex flex-row justify-between ">
                                    <div class="">
                                            <div class="text-2xl font-sans py-5 underline underline-offset-2">
                                                <% if(branches[i].title.length>13) { %>
                                                    <a href="/createLeaves/<%= branches[i]._id %> "><%= branches[i].title.slice(0,11)+'...' %> </a>
                                                <%}else {%>
                                                    <a href="/createLeaves/<%= branches[i]._id %>" ><%= branches[i].title %></a>
                                                <% } %>
                                            </div>
                                    </div>
                                    <div class=" self-center">
                                        <form
                                        action="/branch/deleteBranch/<%= branches[i]._id%>?_method=DELETE"
                                        method="POST"
                                        class="">
                                        <button class=" btn btn-primary fa fa-trash" type="submit"></button>
                                        </form>       
                                    </div>  
                            </div>
                    <%} %>
                </div>
                <div class='fixed bottom-0 w-full'>
                    <button class='absolute bottom-5 right-5 btn btn-primary '>
                            <a href="/createBranch">Add a Branch</a>
                    </button>
            </div>
            </div>
      </div> 
 </div>
<%- include('partials/footer') -%>